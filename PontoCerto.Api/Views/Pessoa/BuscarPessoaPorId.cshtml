@model PontoCerto.Application.DTOs.PessoaDto

@{
    ViewBag.Title = "Visualizar Pessoa";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var departamentoId = ViewBag.DepartamentoId;
}

<h2>Detalhes da Pessoa</h2>

<div>
    <h4>@Model.Nome</h4>
    <p>Valor Hora: @Model.ValorHora.ToString("C")</p>
    <h4>Registros de Ponto:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Data</th>
                <th>Entrada</th>
                <th>Saída</th>
                <th>Almoço</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var registro in Model.RegistrosPonto)
            {
                <tr>
                    <td>@registro.Data.ToShortDateString()</td>
                    <td>@registro.HoraEntrada</td>
                    <td>@registro.HoraSaida</td>
                    <td>@registro.Almoco</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a href="/Pessoa/Index?departamentoId=@departamentoId" class="btn btn-secondary">Voltar</a>
<a href="@Url.Action("Index", "RegistroPonto", new { pessoaId = @Model.Id }))" class="btn btn-primary">Gerenciar Pontos</a>
