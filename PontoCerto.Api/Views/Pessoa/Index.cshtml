@model IEnumerable<PontoCerto.Application.DTOs.PessoaDto>

<h2>Lista de Pessoas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Valor Hora</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.ValorHora.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Adicionar Nova Pessoa</a>
