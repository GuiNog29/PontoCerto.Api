@model PontoCerto.Application.DTOs.RegistroPontoDto

@{
    ViewBag.Title = "Cadastrar Registro Ponto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Registro de Ponto</h2>

<form action="/RegistroPonto/AtualizarRegistroPonto?registroId=@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" name="pessoaId" value="@Model.PessoaId" />

    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input name="Data" asp-for="Data" class="form-control" type="date" value="@Model.Data" />
    </div>

    <div class="form-group">
        <label asp-for="HoraEntrada" class="control-label"></label>
        <input name="HoraEntrada" asp-for="HoraEntrada" class="form-control" type="time" value="@Model.HoraEntrada" />
    </div>

    <div class="form-group">
        <label asp-for="HoraSaida" class="control-label"></label>
        <input name="HoraSaida" asp-for="HoraSaida" class="form-control" type="time" value="@Model.HoraSaida" />
    </div>

    <div class="form-group">
        <label asp-for="Almoco" class="control-label"></label>
        <input name="Almoco" asp-for="Almoco" class="form-control" type="time" value="@Model.Almoco" />
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Voltar</a>
