@model PontoCerto.Application.DTOs.RegistroPontoDto

@{
    ViewBag.Title = "Cadastrar Registro Ponto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var pessoaId = ViewBag.pessoaId;
}

<h2>Registrar Novo Ponto</h2>

<form action="/RegistroPonto/Cadastrar?pessoaId=@pessoaId" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Data" class="control-label">Data</label>
        <input asp-for="Data" class="form-control" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoraEntrada" class="control-label">Horário Entrada</label>
        <input asp-for="HoraEntrada" class="form-control" type="time" />
        <span asp-validation-for="HoraEntrada" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="InicioAlmoco" class="control-label">Horário Inicio Almoco</label>
        <input asp-for="InicioAlmoco" class="form-control" type="time" />
        <span asp-validation-for="InicioAlmoco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FimAlmoco" class="control-label">Horário Fim Almoco</label>
        <input asp-for="FimAlmoco" class="form-control" type="time" />
        <span asp-validation-for="FimAlmoco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HoraSaida" class="control-label">Horário Saída</label>
        <input asp-for="HoraSaida" class="form-control" type="time" />
        <span asp-validation-for="HoraSaida" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index", "Pessoa", new { pessoaId = @pessoaId })" class="btn btn-secondary">Voltar</a>
