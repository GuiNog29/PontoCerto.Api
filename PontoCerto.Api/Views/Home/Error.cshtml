@{
    ViewBag.Title = "Erro - PontoCerto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container text-center mt-5">
    <h1 class="display-3">Ops!</h1>
    <p class="lead">Algo deu errado.</p>
    <p>
        Sentimos muito pelo inconveniente. Não conseguimos processar sua solicitação no momento.
        Se o problema persistir, entre em contato com o suporte técnico.
    </p>
    <p>
        <strong>Código do erro:</strong> @ViewBag.StatusCode
    </p>
    <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">Voltar para a Página Inicial</a>
</div>

<style>
    .container {
        max-width: 600px;
        margin-top: 50px;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }
    .display-3 {
        font-size: 4.5rem;
        color: #dc3545;
    }
    .lead {
        font-size: 1.5rem;
        color: #333;
    }
</style>
