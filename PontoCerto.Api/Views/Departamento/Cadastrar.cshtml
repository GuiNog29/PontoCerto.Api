@model DepartamentoDto

@{
    ViewBag.Title = "Cadastrar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastrar Novo Departamento</h2>

<form action="/Departamento/Cadastrar" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input name="Nome" asp-for="Nome" class="form-control" placeholder="Insira o nome do departamento" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Cadastrar" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index", "Departamento")" class="btn btn-secondary">Voltar</a>
