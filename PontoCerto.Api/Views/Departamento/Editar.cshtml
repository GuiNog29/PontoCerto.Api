@model PontoCerto.Application.DTOs.DepartamentoDto

@{
    ViewBag.Title = "Atualizar Departamento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Departamento</h2>

<form action="/Departamento/Editar?departamentoId=@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="Nome" class="control-label">Nome</label>
        <input name="Nome" asp-for="Nome" class="form-control" value="@Model.Nome" />
    </div>

    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Index", "Departamento")" class="btn btn-secondary">Voltar</a>
